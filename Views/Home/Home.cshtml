<style>
    .card-cancion{
      display: flex;
      flex-direction: row;
    }
    .card-artista{
      display: flex;
      flex-direction: row;
    }
    .card-albumes{
      display: flex;
      flex-direction: row;
    }
    .card-artista img{
      width: 280px;
      height: 300px
    }
    .car-cancion img{
      width: 280px;
      height: 300px
    }
    .car-albumes img{
      width: 280px;
      height: 300px
    }
</style>
<h5><b>Lo que esta sonando ahora</b></h5>
  <div class="card-cancion">
    @foreach (Canciones cancion in ViewBag.listaCanciones)
    {
      <div class="card" style="width: 18rem;">
        <a href='@Url.Action("Cancion", new {idCan = cancion.IdCancion})'><img src="/@cancion.fotoCancion" class="card-img-top" alt="Canciones"></a>
        <div class="card-body">
          <p class="card-text">@cancion.nombreCancion</p>
        </div>
      </div>
    }
  </div>
 <br>
 <br>
<h5><b>Los mas pegados</b></h5>
<br>
  <div class="card-artista">
        @foreach (Artistas art in ViewBag.listaArtistas)
        {
          <div class="card" style="width: 18rem;">
            <a href='@Url.Action("PerfilArtista", new {idAr = art.IdArtista})'><img src="/@art.fotoArtista" class="card-img-top" alt="Artistas"></a>
            <div class="card-body">
              <p class="card-text">@art.nombre</p>
            </div>
          </div>
        }
  </div>
  <br>
  <br>
<h5><b>Para escuchar en loop</b></h5>
  <div class="card-albumes">
        @foreach (Albumes alb in ViewBag.listaAlbumes)
        {
          <div class="card" style="width: 18rem;">
            <a href='@Url.Action("Album", new {idAlb = alb.IdAlbum})'><img src="/@alb.fotoAlbum" class="card-img-top" alt="Abumes"></a>
            <div class="card-body">
              <p class="card-text">@alb.nombreAlbum</p>
            </div>
          </div>
        }
  </div>