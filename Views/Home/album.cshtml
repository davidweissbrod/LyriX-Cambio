<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
@{
    Layout = "_Layout";
}

<body>
    <div class="canciones">
        @foreach (Albumes alb in ViewBag.listaAlbumes)
        {
            @foreach (Canciones can in ViewBag.listaCanciones)
            {
                if(can.IdAlbum == alb.IdAlbum){
                    <div class="card" style="width: 18rem;">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"> <audio src="@can.audio">@can.nombreCancion</audio></li>
                        </ul>
                    </div>
                }
            }
            <div class = "artista">
            @foreach (Artistas art in ViewBag.listaArtistas)
            {
                @if(art.IdArtista == alb.IdArtista){
                    <img src="@art.fotoArtista" alt="Foto artista">
                    <p>@art.nombre</p>
                }
            }
        </div>   
        }
    </div>
</body>