
@{
    Layout = "_Layout";
}
<style>
    .cantainer{
        display: flex;
        justify-content: center;
    }
    img{
        height: 500px;
        width: 500px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }
    .img-cancion{
        height: 500px;
        width: 500px;
        margin: auto;
    }
</style>
<body>
    <div class="cantainer">
        <div class="img-cancion">
            <img src="@ViewBag.Cancion.fotoCancion" alt="Foto Cancion">
        </div>
        <div class="nombres">
            <h3>@ViewBag.Cancion.nombreCancion</h3>
            <a href="Url.Action('Home', 'PerfilArtista')"><h5>@ViewBag.Artista.nombre</h5></a>
        </div>
        <div class="barra-de-control">
            <audio src="@ViewBag.Cancion.audio"></audio>
        </div>
    </div>
</body>