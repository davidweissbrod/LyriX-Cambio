
<style>
    #registro-form {
        width: 400px;
        margin: 0 auto; 
        padding: 20px; 
        margin-top: 220px;
        background-color: #fff; 
        border-radius: 8px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

    #registro-form h2 {
        margin-bottom: 20px; 
        color: #333; 
        font-size: 24px; 
        text-align: center; 
    }

    #registro-form label {
        display: block; 
        margin-bottom: 5px; 
        color: #555; 
        font-weight: bold; 
    }

    #registro-form input[type="text"],
    #registro-form input[type="email"],
    #registro-form input[type="date"],
    #registro-form input[type="password"] {
        width: calc(100% - 10px);
        padding: 8px; 
        margin-bottom: 15px; 
        border-radius: 4px; 
        border: 1px solid #ccc; 
        box-sizing: border-box;
    }   

    #registro-form input[type="submit"] {
        width: 100%; 
        padding: 10px; 
        background-color: #e8a5ee; 
        color: white; 
        border: none; 
        border-radius: 4px; 
        font-size: 16px; 
        cursor: pointer; 
        transition: background-color 0.3s; 
    }   
</style>

    <div id="registro-form">
        <h2>Registro de Usuario</h2>
        <form action='@Url.Action("insertarUser")' method="post">
            <label for="nombre">Nombre de Usuario:</label>
            <input type="text" id="nombre" name="nom" required>

            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="ma" required>

            <label for="fecha-nacimiento">Fecha de Nacimiento:</label>
            <input type="date" id="fecha-nacimiento" name="fn" required>

            <label for="contrasena">Contraseña:</label>
            <input type="password" id="contrasena" name="con" required>

            <input type="submit" value="Registrar">
        </form>
    </div>
