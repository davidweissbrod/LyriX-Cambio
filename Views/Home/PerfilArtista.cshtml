<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"> 
    @{
    Layout = "_Layout";
    }   
</head>
<style>
    .nombre-redes img{
        display: flex;
        border-radius: 100%;
        height: 70px;
        width: 70px;
        margin-right: 10px;
        flex-direction: row;
        justify-content: space-between;
    }
    .pfp{
        border-radius: 100%;
        height: 500px;
        width: 500px;
    }
</style>
<body>
    <div class="perfil-container">
       <img src="@ViewBag.Arti.fotoArtista" alt="Foto del artista" class = "pfp">
        <div class="nombre-redes">
            <h1>@ViewBag.Arti.nombre</h1>
            <span><img src="/img/redes/ig" alt="img ig"></span>
            <span><img src="/img/redes/tw" alt="img tw"></span>
        </div>
       <div class="canciones">
            @foreach (Canciones can in ViewBag.listaCanciones)
            {
                if(ViewBag.Arti.IdArtista == can.IdArtista){
                    <img src="@can.fotoCancion" alt="Foto cancion">
                    <h3>@can.nombreCancion</h3>
                }
            }
        </div>
        <div class="descripcion">
            <div class="card" style="width: 18rem;">
                        <div class="card text-bg-dark">
                            <img src="@ViewBag.Arti.fotoDescripcion" class="card-img" alt="Foto descripcion">
                            <div class="card-img-overlay">
                                <h5 class="card-title">@ViewBag.Arti.nombre</h5>
                                <div class="modal" tabindex="-1" id = "MostrarDescripcion">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id = "NombreArtista"></h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div id = "FotoDescripcion"></div>
                                                <div id = "Descripcion"></div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
        </div>
    </div>
</body>